    "module": "commonjs",
    "rootDir": "src",
    "outDir": "out",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "jsx": "react-jsx"      // ðŸ‘ˆ This line is the key!
  },
